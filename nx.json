{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/cypress/**/*",
      "!{projectRoot}/**/*.cy.[jt]s?(x)",
      "!{projectRoot}/cypress.config.[jt]s",
      "!{projectRoot}/eslint.config.js"
    ],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"]
  },
  "nxCloudId": "67ffe845d3d1251165b1945e",
  "targetDefaults": {
    "@angular-devkit/build-angular:application": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.mjs"
      ]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "options": { "passWithNoTests": true },
      "configurations": { "ci": { "ci": true, "codeCoverage": true } }
    },
    "e2e-ci--**/*": { "dependsOn": ["^build"] },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "plugins": [
    {
      "plugin": "@nx/cypress/plugin",
      "options": {
        "targetName": "e2e",
        "openTargetName": "open-cypress",
        "componentTestingTargetName": "component-test",
        "ciTargetName": "e2e-ci"
      }
    },
    { "plugin": "@nx/eslint/plugin", "options": { "targetName": "lint" } },
    {
      "plugin": "@nx/webpack/plugin",
      "options": {
        "buildTargetName": "build",
        "serveTargetName": "serve",
        "previewTargetName": "preview",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    }
  ],
  "generators": {
    "@nx/angular:application": {
      "e2eTestRunner": "cypress",
      "linter": "eslint",
      "style": "scss",
      "unitTestRunner": "jest"
    },
    "@nx/angular:library": { "linter": "eslint", "unitTestRunner": "jest" },
    "@nx/angular:component": { "style": "scss" }
  },
  "projects": {
    "logger": { "tags": ["type:lib", "scope:backend", "area:logger"] },
    "prisma": { "tags": ["type:lib", "scope:backend", "area:prisma"] },
    "backend-shared": {
      "tags": ["type:lib", "scope:backend", "area:shared"],
      "implicitDependencies": ["prisma"]
    },
    "company": {
      "tags": ["type:feature", "scope:backend", "area:company"],
      "implicitDependencies": ["prisma", "backend-shared"]
    },
    "company-location": {
      "tags": ["type:feature", "scope:backend", "area:company-location"],
      "implicitDependencies": ["prisma", "backend-shared", "company"]
    },
    "registration": {
      "tags": ["type:feature", "scope:backend", "area:registration"],
      "implicitDependencies": ["prisma", "backend-shared", "company"]
    },
    "product": {
      "tags": ["type:feature", "scope:backend", "area:product"],
      "implicitDependencies": ["prisma", "backend-shared"]
    },
    "user": {
      "tags": ["type:feature", "scope:backend", "area:user"],
      "implicitDependencies": ["prisma", "backend-shared"]
    },
    "workorder": {
      "tags": ["type:feature", "scope:backend", "area:workorder"],
      "implicitDependencies": ["prisma", "backend-shared"]
    },
    "api-gateway": {
      "tags": ["type:gateway", "scope:backend", "area:gateway"],
      "implicitDependencies": ["backend-shared", "product", "user", "workorder"]
    },
    "backend-product-service": {
      "tags": ["type:service", "scope:backend", "area:product"],
      "implicitDependencies": ["prisma", "backend-shared", "product"]
    },
    "backend-user-service": {
      "tags": ["type:service", "scope:backend", "area:user"],
      "implicitDependencies": ["prisma", "backend-shared", "user"]
    },
    "backend-workorder-service": {
      "tags": ["type:service", "scope:backend", "area:workorder"],
      "implicitDependencies": ["prisma", "backend-shared", "workorder"]
    },
    "frontend": { "tags": ["type:app", "scope:frontend"] },
    "frontend-core": {
      "tags": [
        "type:core",
        "type:generated",
        "type:buildable",
        "scope:frontend"
      ]
    },
    "frontend-graphql-types": {
      "tags": [
        "type:graphql-types",
        "type:generated",
        "type:buildable",
        "scope:frontend"
      ]
    },
    "frontend-shared": {
      "tags": ["type:shared", "scope:frontend"],
      "implicitDependencies": ["frontend-graphql-types"]
    },
    "frontend-data-access": {
      "tags": ["type:lib", "scope:frontend"],
      "implicitDependencies": [
        "frontend-shared",
        "frontend-core",
        "frontend-graphql-types"
      ]
    },
    "ui": {
      "tags": ["type:ui", "scope:frontend", "platform:angular"],
      "implicitDependencies": ["frontend-data-access", "frontend-shared"]
    }
  },
  "enforce-module-boundaries": {
    "allowedDependencies": [
      {
        "sourceTag": "scope:backend",
        "onlyDependOnLibsWithTags": ["scope:backend"]
      },
      {
        "sourceTag": "scope:frontend",
        "onlyDependOnLibsWithTags": ["scope:frontend"]
      },
      {
        "sourceTag": "type:app",
        "onlyDependOnLibsWithTags": ["type:shared", "type:feature"]
      },
      {
        "sourceTag": "type:service",
        "onlyDependOnLibsWithTags": ["type:feature", "type:lib"]
      },
      { "sourceTag": "type:feature", "onlyDependOnLibsWithTags": ["type:lib"] },
      {
        "sourceTag": "type:gateway",
        "onlyDependOnLibsWithTags": ["type:lib", "type:feature"]
      },
      { "sourceTag": "area:logger", "onlyDependOnLibsWithTags": [] },
      {
        "sourceTag": "type:graphql-types",
        "onlyDependOnLibsWithTags": [
          "type:graphql-types",
          "type:shared",
          "type:buildable"
        ]
      }
    ]
  }
}
