{
  "name": "frontend-shared",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/frontend/shared/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [
    "type:shared",
    "type:generated",
    "type:buildable",
    "platform:angular",
    "scope:frontend"
  ],
  "implicitDependencies": [
    "frontend-core",
    "frontend-graphql-types",
    "frontend-data-access"
  ],
  "targets": {
    // "build": {
    //   "executor": "@nx/angular:package",
    //   "outputs": ["{options.outputPath}"],
    //   "options": {
    //     "tsConfig": "libs/frontend/shared/tsconfig.lib.json",
    //     "project": "libs/frontend/shared/ng-package.json"
    //   }
    // },

    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/frontend/shared",
        "main": "libs/frontend/shared/src/index.ts",
        "tsConfig": "libs/frontend/shared/tsconfig.lib.json",
        "assets": ["libs/frontend/shared/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/frontend/shared/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
