{
  "name": "ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/frontend/ui/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["type:ui", "scope:frontend", "platform:angular"],
  "schematics": {
    "@nx/angular:component": {
      "prefix": "lib"
    }
  },
  "implicitDependencies": [
    "frontend-core",
    "frontend-graphql-types",
    "frontend-data-access",
    "frontend-shared"
  ],

  "targets": {
    // "build": {
    //   "executor": "@nx/angular:package",
    //   "outputs": ["{options.outputPath}"],
    //   "options": {
    //     "tsConfig": "libs/frontend/ui/tsconfig.lib.json",
    //     "project": "libs/frontend/ui/ng-package.json"
    //   }
    // },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/frontend/ui",
        "main": "libs/frontend/ui/src/index.ts",
        "tsConfig": "libs/frontend/ui/tsconfig.lib.json",
        "assets": ["libs/frontend/ui/*.md"]
      }
    },

    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/frontend/ui/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
