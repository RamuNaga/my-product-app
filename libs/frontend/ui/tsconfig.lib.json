{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc/libs/frontend/ui",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": []
  },

  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.ngtypecheck.ts",
    "jest.config.ts",
    "src/test-setup.ts"
  ],
  "include": ["src/**/*.ts"],
  "angularCompilerOptions": {
    "experimentalTemplateReactivity": true,
    "controlFlow": true,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
