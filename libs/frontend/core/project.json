{
  "name": "frontend-core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/frontend/core/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [
    "type:core",
    "type:generated",
    "type:buildable",
    "platform:angular",
    "scope:frontend"
  ],
  "targets": {
    // "build": {
    //   "executor": "@nx/angular:package",
    //   "outputs": ["{options.outputPath}"],
    //   "options": {
    //     "tsConfig": "libs/frontend/core/tsconfig.lib.json",
    //     "project": "libs/frontend/core/ng-package.json"
    //   }
    // },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/frontend/core",
        "main": "libs/frontend/core/src/index.ts",
        "tsConfig": "libs/frontend/core/tsconfig.lib.json",
        "assets": ["libs/frontend/core/*.md"]
      }
    },

    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/frontend/core/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
