{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@my-product-app/backend-company": [
        "libs/backend/company/src/index.ts"
      ],
      "@my-product-app/backend-company-location": [
        "libs/backend/company-location/src/index.ts"
      ],
      "@my-product-app/backend-registration": [
        "libs/backend/registration/src/index.ts"
      ],
      "@my-product-app/backend-shared": [
        "libs/backend/shared/src/index.ts"
      ],
      "@my-product-app/backend-shared/*": [
        "libs/backend/shared/src/lib/*"
      ],
      "@my-product-app/backend-shared/types/*": [
        "libs/backend/shared/src/lib/types/*"
      ],
      "@my-product-app/frontend-core": [
        "dist/libs/frontend/core"
      ],
      "@my-product-app/frontend-core/*": [
        "libs/frontend/core/src/lib/*"
      ],
      "@my-product-app/frontend-data-access": [
        "dist/libs/frontend/data-access"
      ],
      "@my-product-app/frontend-data-access/*": [
        "libs/frontend/data-access/src/lib/*"
      ],
      "@my-product-app/frontend-graphql-types": [
        "dist/libs/frontend/graphql-types"
      ],
      "@my-product-app/frontend-graphql-types/*": [
        "libs/frontend/graphql-types/src/lib/*"
      ],
      "@my-product-app/frontend-shared": [
        "dist/libs/frontend/shared"
      ],
      "@my-product-app/frontend-shared/*": [
        "libs/frontend/shared/src/lib/*"
      ],
      "@my-product-app/frontend-ui": [
        "dist/libs/frontend/ui"
      ],
      "@my-product-app/frontend-ui/*": [
        "libs/frontend/ui/src/lib/*"
      ],
      "@my-product-app/frontend-ui/styles": [
        "dist/libs/frontend/ui/styles/theme"
      ],
      "@my-product-app/logger": [
        "libs/backend/logger/src/index.ts"
      ],
      "@my-product-app/prisma": [
        "libs/backend/prisma/src/index.ts"
      ],
      "@my-product-app/product": [
        "libs/backend/product/src/index.ts"
      ],
      "@my-product-app/user": [
        "libs/backend/user/src/index.ts"
      ],
      "@my-product-app/workorder": [
        "libs/backend/workorder/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
