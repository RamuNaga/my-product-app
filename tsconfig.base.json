{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/out-tsc",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@my-product-app/backend-company": ["libs/backend/company/src/index.ts"],
      "@my-product-app/backend-company-location": [
        "libs/backend/company-location/src/index.ts"
      ],
      "@my-product-app/backend-registration": [
        "libs/backend/registration/src/index.ts"
      ],
      "@my-product-app/backend-shared": ["libs/backend/shared/src/index.ts"],
      "@my-product-app/backend-shared/*": ["libs/backend/shared/src/lib/*"],
      "@my-product-app/frontend-core": ["libs/frontend/core/src/index.ts"],
      "@my-product-app/frontend-core/*": ["libs/frontend/core/src/lib/*"],
      "@my-product-app/frontend-data-access": [
        "libs/frontend/data-access/src/index.ts"
      ],
      "@my-product-app/frontend-data-access/*": [
        "libs/frontend/data-access/src/lib/*"
      ],
      "@my-product-app/frontend-graphql-types": [
        "libs/frontend/graphql-types/src/index.ts"
      ],
      "@my-product-app/frontend-graphql-types/*": [
        "libs/frontend/graphql-types/src/lib/*"
      ],
      "@my-product-app/frontend-shared": ["libs/frontend/shared/src/index.ts"],
      "@my-product-app/frontend-shared/*": ["libs/frontend/shared/src/lib/*"],
      "@my-product-app/frontend-ui": ["libs/frontend/ui/src/index.ts"],
      "@my-product-app/frontend-ui/*": ["libs/frontend/ui/src/lib/*"],
      "@my-product-app/logger": ["libs/backend/logger/src/index.ts"],
      "@my-product-app/prisma": ["libs/backend/prisma/src/index.ts"],
      "@my-product-app/product": ["libs/backend/product/src/index.ts"],
      "@my-product-app/user": ["libs/backend/user/src/index.ts"],
      "@my-product-app/workorder": ["libs/backend/workorder/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "tmp"]
}
